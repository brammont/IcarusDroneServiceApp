<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Icarus Drone Service Application"
        Width="900"
        Height="560"
        ResizeMode="CanResize">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Name="statusBarText" />
        </StatusBar>
        <Grid Margin="14">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL: New Job Form -->
            <Border Grid.Column="0" CornerRadius="10" Padding="16"
                    BorderBrush="#DDD" BorderThickness="1"
                    Background="#FAFAFA">
                <StackPanel>
                    <TextBlock Text="New Job" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>
                    <TextBlock Text="Client Name" />
                    <TextBox Name="txtClientName" Margin="0,0,0,8" IsReadOnly="False"/>
                    <TextBlock Text="Service Tag"/>
                    <TextBox Name="numServiceTag" IsEnabled="False" Margin="0,0,0,8" IsReadOnly="True"/>
                    <TextBlock Text="Model"/>
                    <TextBox Name="txtDroneModel" Margin="0,0,0,8" IsReadOnly="False"/>
                    <TextBlock Text="Priority" Margin="0,8,0,0"/>
                    <StackPanel Orientation="Vertical" Margin="0,2,0,8">
                        <RadioButton Name="rbRegular" Content="Regular" GroupName="Priority" IsChecked="True" IsEnabled="True"/>
                        <RadioButton Name="rbExpress" Content="Express" GroupName="Priority" Margin="0,4,0,0" IsEnabled="True"/>
                    </StackPanel>
                    <TextBlock Text="Cost"/>
                    <TextBox Name="txtCost" Margin="0,0,0,8" IsReadOnly="False"/>
                    <TextBlock Text="Problem Description"/>
                    <TextBox Name="txtProblem" Height="60" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,0,0,8" IsReadOnly="False"/>
                    <Button Name="btnAddNewItem" Content="Add Job" Height="32" Margin="0,12,0,0" Click="btnAddNewItem_Click"/>
                </StackPanel>
            </Border>

            <Rectangle Grid.Column="1" Width="12" Fill="Transparent"/>

            <!-- RIGHT PANEL -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TabControl for Regular and Express job queues -->
                <TabControl Grid.Row="0" Margin="0,0,0,6">
                    <TabItem Header="Regular">
                        <ListView Name="lvRegularService" Height="140"
                                  SelectionChanged="lvRegularService_SelectionChanged"
                                  PreviewMouseLeftButtonDown="lvRegularService_PreviewMouseLeftButtonDown">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Tag" DisplayMemberBinding="{Binding ServiceTag}" Width="50"/>
                                    <GridViewColumn Header="Client" DisplayMemberBinding="{Binding ClientName}" Width="100"/>
                                    <GridViewColumn Header="Model" DisplayMemberBinding="{Binding DroneModel}" Width="80"/>
                                    <GridViewColumn Header="Problem" DisplayMemberBinding="{Binding ServiceProblem}" Width="160"/>
                                    <GridViewColumn Header="Cost" DisplayMemberBinding="{Binding ServiceCost}" Width="60"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </TabItem>
                    <TabItem Header="Express">
                        <ListView Name="lvExpressService" Height="140"
                                  SelectionChanged="lvExpressService_SelectionChanged"
                                  PreviewMouseLeftButtonDown="lvExpressService_PreviewMouseLeftButtonDown">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Tag" DisplayMemberBinding="{Binding ServiceTag}" Width="50"/>
                                    <GridViewColumn Header="Client" DisplayMemberBinding="{Binding ClientName}" Width="100"/>
                                    <GridViewColumn Header="Model" DisplayMemberBinding="{Binding DroneModel}" Width="80"/>
                                    <GridViewColumn Header="Problem" DisplayMemberBinding="{Binding ServiceProblem}" Width="160"/>
                                    <GridViewColumn Header="Cost" DisplayMemberBinding="{Binding ServiceCost}" Width="60"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </TabItem>
                </TabControl>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,6">
                    <Button Name="btnProcessRegular" Content="Process Reg" Width="120" Margin="0,0,10,0" Click="btnProcessRegular_Click"/>
                    <Button Name="btnProcessExpress" Content="Process Express" Width="120" Click="btnProcessExpress_Click"/>
                </StackPanel>

                <TextBlock Grid.Row="2" Text="Finished Jobs" FontWeight="Bold" FontSize="14" Margin="0,8,0,6"/>

                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ListView Name="lvFinishedList" Height="140" MouseDoubleClick="lvFinishedList_MouseDoubleClick">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Tag" DisplayMemberBinding="{Binding ServiceTag}" Width="50"/>
                                <GridViewColumn Header="Client" DisplayMemberBinding="{Binding ClientName}" Width="100"/>
                                <GridViewColumn Header="Cost" DisplayMemberBinding="{Binding ServiceCost}" Width="60"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
